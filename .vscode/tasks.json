{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Requirements",
            "type": "shell",
            "command": "pip install -r requirements.txt",
            "group": "none"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "pytest",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Start Pipeline",
            "type": "shell",
            "command": "python scripts\\run_pipeline.py",
            "group": "none"
        }
    ]
}
